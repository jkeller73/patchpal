<div class="banner-new-patch">
  <h1>Let's get started</h1>
  <div class="search-bar">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for veggies..." />
        <button name="button" type="submit" class="btn-new">
          <i class="fas fa-search"></i> search
        </button>
      </div>
    <% end %>
  </div>
</div>
<div class="green-strip"></div>
<div class="container-new-patch">
<!--   <div class="drag-drop">
    <h3>My first patch</h2>

  </div> -->
<!--   <button class="btn-save">save</button>
  <img id="arrow" src="<%= asset_url("arrow.png") %>" alt=""> -->

  <div class="season-cards">
    <h2>'Tis the Season!</h2>
    <div class="container">
      <div class="row">
        <% @available_plants.first(6).each do |plant| %>
          <div class="cards col-sm-4">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1488459716781-31db52582fe9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80)">
                <h4 id="vg-text"><%= plant.name %></h4>
                <%= button_to "+", patch_patch_plants_path(@patch, patch_plant: { plant: plant }), id: "plus-button", method: :post %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="patch-co">
    <div class="rel">
      <img class="leaf-avatar" alt="avatar" src="<%= asset_url('leaf.png') %>" />
      <div class="leaf-avatar co"></div>
      <h5><%= @patch.name %> Patch</h5>
      <% @patch.plants.each do |plant| %>
        <p><%= plant.name.capitalize() %></p>
      <% end %>
    </div>
  </div>
</div>
<img src="<%= asset_url('man.png') %>" alt="">
<img src="<%= asset_url('meadow.png') %>" alt="" id="meadow">

