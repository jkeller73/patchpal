<div class="index-cards">
    <div class="index-container">
      <%= link_to "Create New Patch", new_patch_path, class: "index-page-button" %>
      <div class="h2-div">
        <h2><span class="highlightme">&nbsp;A-Z of Veg&nbsp;</span></h2>
      </div>
      <div class="row">
        <% @plants.order(:name).each do |plant| %>
          <div class="cards col-sm-4">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                <h3><%= link_to plant.name, plant_path(plant), class: "index-text" %></h3>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
