<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="height: 10vh;">
  <%= link_to root_path, class: "navbar-brand" do %>
    <h1>P</h1>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My Patches", patches_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "A-Z of Veg", plants_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Patch", new_patch_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
          <%= cl_image_tag current_user.avatar.key, :angle=>"ignore", class: "avatarr dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else  %>
              <%= image_tag asset_url('apple.png'), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add/ Change Profile Picture", edit_user_registration_path, class: "dropdown-item" %>

            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "SIGN-UP", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item" style="padding-right: 2vw;">
          <%= link_to "LOGIN", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= image_tag asset_url('apple.png'), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
